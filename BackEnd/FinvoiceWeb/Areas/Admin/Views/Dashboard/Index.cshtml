@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Style
    {
            <link rel="stylesheet" href="~/css/Admin/Dashboard.css" />
}

@section Script
    {
            <script src="~/js/Admin/Dashboard.js"></script>
}

<div class="body-main">

    <!-- Top Bar -->
    <div class="main-topbar">
        <div class="menu-button">
            <div class="menu-button__burger"></div>
        </div>
    </div>

    <!-- Card Main -->
    <div class="card-main">
        <div class="card-box">
            <div class="card-box__content flexBox">
                <div class="content-numbers counter">@TempData["TOTAL_USER"]</div>
                <div class="content-name">Users</div>
            </div>
            <div class="card-box__icon">
                <i class="fa-solid fa-users"></i>
            </div>
        </div>
        <div class="card-box">
            <div class="card-box__content flexBox">
                <div class="content-numbers counter">@TempData["TOTAL_EXCEL_TEMPLATES"]</div>
                <div class="content-name">Excel Templates</div>
            </div>
            <div class="card-box__icon">
                <i class="fa-solid fa-file-excel"></i>
            </div>
        </div>
        <div class="card-box">
            <div class="card-box__content flexBox">
                <div class="content-numbers counter">@TempData["TOTAL_EXCEL_TEMPLATES"]</div>
                <div class="content-name">Suppliers</div>
            </div>
            <div class="card-box__icon">
                <i class="fa-solid fa-people-carry-box"></i>
            </div>
        </div>
        <div class="card-box">
            <div class="card-box__content flexBox">
                <div class="content-numbers counter">@TempData["TOTAL_ACCOUNTING_SOFTWARE"]</div>
                <div class="content-name">Accounting Software</div>
            </div>
            <div class="card-box__icon">
                <i class="fa-solid fa-users-gear"></i>
            </div>
        </div>
    </div>

    <!-- Add Charts -->
    <div class="graph-chart mb-3">
        <div class="chart-box">
            <canvas id="ChartCustomer"></canvas>
        </div>
    </div>
</div>
