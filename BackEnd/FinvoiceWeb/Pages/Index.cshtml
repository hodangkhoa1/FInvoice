                            <div class="prostauto__item--arrow">
                                <img src="~/images/arrow.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-sm-6 col-lg-4 flexBox">
                    <div class="prostauto__item flexBox">
                        <div class="prostauto__cover">
                            <div class="prostauto__img">
                                <img src="~/images/sys.png" alt="">
                            </div>
                            <div class="prostauto__content">
                                <p>System picks up invoices <span class="text-yellow">automatically</span></p>
                            </div>
                        </div>

                        <div class="prostauto__item--layout">
                            <div class="layout--top color3"></div>
                            <div class="layout--bottom"></div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-sm-6 col-lg-4 flexBox">
                    <div class="prostauto__item flexBox">
                        <div class="prostauto__cover">
                            <div class="prostauto__img">
                                <img src="~/images/code.png" alt="">
                            </div>
                            <div class="prostauto__content">
                                <p>
                                    Validating businessrules,
                                    <span class="text-yellow">coding</span>, and <span class="text-yellow">handling exceptions</span>
                                </p>
                            </div>
                        </div>

                        <div class="prostauto__item--layout">
                            <div class="layout--top color4"></div>
                            <div class="layout--bottom"></div>
                            <div class="prostauto__item--arrow">
                                <img src="~/images/arrow.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- END PROSTAUTO -->
