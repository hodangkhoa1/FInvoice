@page
@model FinvoiceWeb.Pages.IndexModel

@{
    ViewBag.Title = "Home";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Style
    {
    <link rel="stylesheet" href="~/css/User/Home.css" />
}

@section Script
    {
    <script src="~/js/User/Home.js"></script>
}

<!-- HEADER ------>
<div class="home__header container-fluid flexBox">
    <div class="home__contain flexBox">
        <div class="header__content ms-3">
            <h2>Increased Efficiency</h2>
            <div class="header__content-wrapper">
                <h1>Through</h1>
                <ul class="dynamic-text">
                    <li>
                        <span>Automation</span>
                    </li>
                    <li>
                        <span>Automation</span>
                    </li>
                    <li>
                        <span>Automation</span>
                    </li>
                    <li>
                        <span>Automation</span>
                    </li>
                </ul>
            </div>
            <p>
                We have <span class="text__bold">automated invoice distribution</span> from as our automation
                initiatives.
            </p>
        </div>

        <div class="header__img">
            <img src="~/images/invoice.png" alt="">
        </div>
    </div>
</div>
<!-- END HEADER -->
<!-- PREAUTO -->
<div class="home__preauto">
    <div class="title text-center">
        <h2>Pre-Automation </h2>
        <p>
            <span class="text__bold">Manually creating</span> and <span class="text__bold">
                distributing
                invoices
            </span> - labor - intensive and prone to errors.
        </p>
    </div>

    <div class="preauto__body my-5">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="preauto__cover flexBox mb-3">
                        <div class="preauto__retangle card py-3">
                            <div class="preauto__contain flexBox">
                                <div class="circle flexBox">
                                    <div class="preauto__retangle--img">
                                        <img src="~/images/cloud.png" class="card-img-top">
                                    </div>
                                </div>
                            </div>
                            <div class="card-body flexBox">
                                <p class="card-text text-center">Download invoices manually</p>
                            </div>

                            <div class="preauto__icon icon--top d-none d-md-block">
                                <i class="fas fa-long-arrow-alt-right"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="preauto__cover flexBox mb-3">
                        <div class="preauto__retangle card py-3">
                            <div class="preauto__contain flexBox">
                                <div class="circle flexBox">
                                    <div class="preauto__retangle--img">
                                        <img src="~/images/email.png" class="card-img-top">
                                    </div>
                                </div>
                            </div>

                            <div class="card-body flexBox">
                                <p class="card-text text-center">Create an email for the tenant contact</p>
                            </div>

                            <div class="preauto__icon icon--bottom d-none d-md-block">
                                <i class="fas fa-long-arrow-alt-right"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="preauto__cover flexBox mb-3">
                        <div class="preauto__retangle card py-3">
                            <div class="preauto__contain flexBox">
                                <div class="circle flexBox">
                                    <div class="preauto__retangle--img">
                                        <img src="~/images/emailVideo.png" class="card-img-top">
                                    </div>
                                </div>
                            </div>

                            <div class="card-body flexBox">
                                <p class="card-text text-center">Send the e-mailmanually</p>
                            </div>

                            <div class="preauto__icon icon--top d-none d-md-block">
                                <i class="fas fa-long-arrow-alt-right"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="preauto__cover flexBox mb-3">
                        <div class="preauto__retangle card py-3">
                            <div class="preauto__contain flexBox">
                                <div class="circle flexBox">
                                    <div class="preauto__retangle--img">
                                        <img src="~/images/messe.png" class="card-img-top">
                                    </div>
                                </div>
                            </div>
                            <div class="card-body flexBox">
                                <p class="card-text text-center">Maintain communication records manually</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="background__bottom d-none d-sm-block"></div>
</div>
<!-- END PREAUTO -->
<!-- PROSTAUTO -->
