@page "/profile"
@using FinvoiceWeb.Models;
@using FinvoiceWeb.Utils;
@model FinvoiceWeb.Pages.ProfileModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    UserInfo userInfo = SessionHelper.GetObjectFromJson<UserInfo>(HttpContext.Session, "LOGIN_USER");
}

@section Style
{
    <link rel="stylesheet" href="~/css/User/Profile.css" />
}

<div class="container" style="margin-top: 8rem;">
    <div class="main-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="avatar-photo" style="background: @userInfo.ColorAvatar">
                                @if (userInfo.Avatar != null)
                                {
                                    <img src="data:image/png;base64,@userInfo.Avatar" alt="@userInfo.FullName">
                                }
                                else
                                {
                                    <p>@userInfo.DefaultAvatar.ToString().ToUpper()</p>
                                }
                            </div>
                            <div class="mt-3">
                                <h4>@userInfo.FullName</h4>
                                <p class="text-muted font-size-sm">@userInfo.Email</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0 mt-2">User Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" value="@userInfo.FullName" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0 mt-2">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" value="@userInfo.Email" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0 mt-2">Gender</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @if (userInfo.Gender.Equals("M"))
                                {
                                    <input type="text" class="form-control" value="Male" disabled>
                                }
                                else if (userInfo.Gender.Equals("F"))
                                {
                                    <input type="text" class="form-control" value="Female" disabled>
                                }
                                else
                                {
                                    <input type="text" class="form-control" value="" disabled>
                                }
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0 mt-2">Date Of Birth</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" value="@String.Format("{0:dd/MM/yyyy}", userInfo.DateOfBirth)" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0 mt-2">Phone Number</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" value="@userInfo.Phone" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0 mt-2">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" value="@userInfo.Address" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0 mt-2">Tax Code</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" value="@userInfo.TaxCode" disabled>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <h6 class="mb-0 mt-2">Date Created</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <input type="text" class="form-control" value="@String.Format("{0:dd/MM/yyyy}", userInfo.AccountCreated)" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>